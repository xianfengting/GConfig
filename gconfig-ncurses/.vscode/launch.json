    "version": "0.2.0",
    "configurations": [
        {
            "name": "build and debug gconfig-ncurses",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gconfig-ncurses/out/program",
            "args": [
                "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/gconfig-ncurses/out",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build gconfig-ncurses",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
